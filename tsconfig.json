{
	"compileOnSave": true,
	"compilerOptions": {
		"module": "es6",
		"moduleResolution": "node",
		"target": "es6",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"esModuleInterop": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
